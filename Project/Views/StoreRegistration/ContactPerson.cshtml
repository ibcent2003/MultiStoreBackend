@model Project.Models.StoreRegistrationViewModel
@{
    ViewBag.Title = "Store Contact Person";
    var db = new Project.DAL.PROEntities();
}
<style>
    .disabledTab {
        pointer-events: none;
    }
</style>
<div class="page-header page-title-left mini">
    <div class="image-bg content-in" data-background="@Url.Content("~/Content/Frontend/light/img/sections/slider/inner.jpg")" data-stellar-background-ratio="0.5" style="background-image: @Url.Content("~/Content/Frontend/light/img/sections/slider/backmenu.jpg"); background-position: 50% 0%;"></div>
    <div class="container">
        <div class="col-md-12">
            <h1 class="title" style="color:white">Store Contact Person</h1>
            <ul class="breadcrumb" style="color:white">
                <li style="color:white">
                    <a href="@Url.Action("Index", "Home", new {area = "" })" style="color:white">Home</a>
                </li>
                <li class="active" style="color:white">Store Contact Person</li>
            </ul>
        </div>
    </div>
</div>

<section id="addition-info" class="page-section">
    <div class="container">

        <div class="row">
            <div class="col-md-12">
                @if (TempData["Message"] != null)
                {
                    var alertType = (TempData["MessageType"] != null) ? TempData["MessageType"] : "alert-info";
                    <div class="alert @alertType fade in">
                        <button type="button" class="close" data-dismiss="alert">
                            <i class="fa fa-times"></i>
                        </button>
                        @Html.Raw(TempData["Message"])
                    </div>
                }
                <div id="tabbed_widget" class="tabbable" style="display:;">
                    <ul class="nav nav-tabs" style="margin: 0 0 20px 0;">
                        <li class="disabled disabledTab">
                            <a href="#">Guidelines</a>
                        </li>
                        <li class="disabled disabledTab">
                            <a href="#">Step 1: Store Information</a>
                        </li>
                        <li class="disabled disabledTab">
                            <a href="#">Step 2: Store Address</a>
                        </li>
                        <li class="active">
                            <a href="#">Step 3: Contact Person</a>
                        </li>

                        <li class="disabled disabledTab">
                            <a href="#">Step 4: Product Category</a>
                        </li>
                        <li class="disabled disabledTab">
                            <a href="#">Step 5: Account Info</a>
                        </li>
                        <li class="disabled disabledTab">
                            <a href="#">Step 6:Review</a>
                        </li>
                        <li class="disabled disabledTab">
                            <a href="#">Feedback</a>
                        </li>
                    </ul>
                </div>

                <div class="panel panel-warning" id="tabbed_widget_panel">
                    <div class="panel-heading" style="background-color: #FFA500;border-color: #FFA500;">
                        Store Contact Person
                    </div>



                    @using (Html.BeginForm("ContactPerson", "StoreRegistration", FormMethod.Post))
            {
                        @Html.AntiForgeryToken()

                        @Html.HiddenFor(x => x.store.ProcessInstaceId)
                        @Html.HiddenFor(x => x.store.CountryId)
                        <div class="panel-body">

                            <div class="col-md-12">
                                <div class="col-sm-6 col-md-6">
                                    <div class="widget">
                                        <div class="widget-title">
                                            <p class="lead">Contact Person Details</p>
                                        </div>

                                        <div class="row">
                                            <div class="col-xs-5">
                                                <div>
                                                    @Html.LabelFor(model => model.contactform.FirstName, new { @class = "required" })
                                                </div>
                                                <div class="form-group">
                                                    <div class="input-icon">
                                                        @Html.TextBoxFor(model => model.contactform.FirstName, new { @class = "form-control", @placeholder = "Enter the First Name" })
                                                        @Html.ValidationMessageFor(model => model.contactform.FirstName, null, new { @style = "color:red" })
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="col-xs-5">
                                                <div>
                                                    @Html.LabelFor(model => model.contactform.LastName, new { @class = "required" })
                                                </div>
                                                <div class="form-group">
                                                    <div class="input-icon">
                                                        @Html.TextBoxFor(model => model.contactform.LastName, new { @class = "form-control", @placeholder = "Enter the Last Name" })
                                                        @Html.ValidationMessageFor(model => model.contactform.LastName, null, new { @style = "color:red" })
                                                    </div>
                                                </div>
                                            </div>
                                        </div>

                                        <div class="row">
                                            <div class="col-xs-5">
                                                <div>
                                                    @Html.Label("Email Address", new { @class = "required" })
                                                </div>
                                                <div class="form-group">
                                                    <div class="input-icon">
                                                        @Html.TextBoxFor(model => model.contactform.EmailAddress, new { @class = "form-control", @placeholder = "Enter the Email Address" })
                                                        @Html.ValidationMessageFor(model => model.contactform.EmailAddress, null, new { @style = "color:red" })
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="col-xs-5">
                                                <div>
                                                    @Html.LabelFor(model => model.contactform.MobileNumber, new { @class = "required" })
                                                </div>
                                                <div class="form-group">
                                                    <div class="input-icon">

                                                        @Html.TextBoxFor(model => model.contactform.MobileNumber, new { @class = "form-control", maxlength = 11, @placeholder = "eg. 08039701889" })
                                                        @Html.ValidationMessageFor(model => model.contactform.MobileNumber, null, new { @style = "color:red" })
                                                    </div>
                                                </div>
                                            </div>
                                        </div>



                                        <div class="row">
                                            <div class="col-xs-5">
                                                <div>

                                                </div>
                                                <div class="form-group">
                                                    <div class="input-icon">

                                                    </div>
                                                </div>
                                            </div>
                                            <div class="col-xs-5">
                                                <div>

                                                </div>
                                                <div class="form-group">
                                                    <div class="input-icon">
                                                        <button type="submit" class="btn btn-default pull-right" style="color:white">Submit</button>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>



                                    </div>
                                </div>


                                <div class="col-sm-6 col-md-6">
                                    <div class="widget">
                                        <div class="widget-title">
                                            <p class="lead">Contact Information List</p>
                                        </div>
                                        <table class="table table-striped table-bordered table-hover">
                                            <thead>
                                                <tr style="font-size: 12px;">
                                                    <th>S/N</th>
                                                    <th>First Last</th>
                                                    <th>Last Name</th>
                                                    <th>Email</th>
                                                    <th>Number No</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                @if (Model.contactInfoList.Count != 0)
                                                {
                                                    int i = 0;
                                                    foreach (var item in Model.contactInfoList)
                                                    {
                                                        ++i;
                                                        <tr style="font-size: 12px;">
                                                            <td>
                                                                @i
                                                            </td>
                                                            <td>@item.FirstName</td>
                                                            <td>@item.LastName</td>
                                                            <td>@item.EmailAddress</td>
                                                            <td>@item.MobileNo</td>
                                                        </tr>
                                                    }
                                                }
                                                else
                                                {
                                                    <tr>
                                                        <td colspan="8">No Records Found!...</td>
                                                    </tr>
                                                }
                                            </tbody>
                                        </table>
                                        <div class="alert alert-warning">
                                            <strong>Please Note!</strong> You can add/edit more Contact Person from your Dashboard after completing your registration.
                                        </div>
                                    </div>
                                </div>

                            </div>


                        </div>

                        if (Model.contactInfoList.Any())
                        {
                            <div class="panel-footer">
                                <div class="row">
                                    <div class="col-md-6">
                                        <a href="@Url.Action("NewAddress", "StoreRegistration", new {Id = Model.store.ProcessInstaceId, @rea = "" })" class="btn btn-sm btn-default" style="color:white;float:left">Back</a>
                                    </div>
                                    <div class="col-md-6">
                                        <a href="@Url.Action("ProductCategory", "StoreRegistration", new {Id = Model.store.ProcessInstaceId, @rea = "" })" class="btn btn-sm btn-default" style="color:white;float:right">Next</a>
                                    </div>
                                </div>
                            </div>
                        }
                        else
                        {
                            <div class="panel-footer">
                                <div class="row">
                                    <div style="text-align: left;" class="col-md-6">
                                        <a href="@Url.Action("NewAddress", "StoreRegistration", new {Id = Model.store.ProcessInstaceId, @rea = "" })" class="btn btn-sm btn-default" style="color:white;float:left">Back</a>
                                    </div>
                                    <div style="text-align: right;" class="col-md-6">

                                    </div>
                                </div>
                            </div>
                        }
                    }
                </div>

            </div>
        </div>
    </div>
</section>

<style>
    .disabledTab {
        pointer-events: none;
    }

    .required:after {
        content: "*";
        font-weight: bold;
        color: red;
    }
</style>


