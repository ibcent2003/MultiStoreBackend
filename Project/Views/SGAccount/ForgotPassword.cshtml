@model SecurityGuard.ViewModels.ForgotPasswordViewModel
@{
    ViewBag.Title = "Forgot Password";
}
<div class="page-header page-title-left mini">
    <div class="image-bg content-in" data-background="@Url.Content("~/Content/Frontend/light/img/sections/slider/inner.jpg")" data-stellar-background-ratio="0.5" style="background-image: @Url.Content("~/Content/Frontend/light/img/sections/slider/backmenu.jpg"); background-position: 50% 0%;"></div>
    <div class="container">
        <div class="col-md-12">
            <h1 class="title" style="color:white">About</h1>
            <ul class="breadcrumb" style="color:white">
                <li style="color:white">
                    <a href="@Url.Action("Index", "Home", new {area = "" })" style="color:white">Home</a>
                </li>

                <li class="active" style="color:white">Forgot Password</li>
            </ul>
        </div>
    </div>
</div>

<section id="addition-info" class="page-section">
    <div class="container">

        <div class="row">
            <div class="col-md-12">
               

                <div class="panel panel-warning" id="tabbed_widget_panel">
                    <div class="panel-heading" style="background-color: #FFA500;border-color: #FFA500;">
                        Enter your email address and your password will be reset and emailed to you.
                    </div>
                    @using (Html.BeginForm(new {@class = "form-horizontal row-border" }))

                    {
                        <div class="panel-body">
                            <div class="col-lg-9">
                                @Html.AntiForgeryToken()
                                @Html.ValidationSummary()                               
                                <div class="panel-body">
                                    <div class="content col-sm-12 col-md-8">
                                        <div class="editor-label">
                                            @Html.LabelFor(model => model.Email, new { @class = "required" })
                                        </div>
                                        <div class="form-group">
                                            <div class="input-icon">
                                                @Html.TextBoxFor(model => model.Email, new { @class = "form-control", @placeholder = "Enter your email address." })
                                                @Html.ValidationMessageFor(model => model.Email, null, new { @style = "color:red" })
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="panel-footer">
                            <div class="row">
                                <div style="text-align: left;" class="col-md-6">
                                    <a href="@Url.Action("Index", "Home", new {area = "" })" class="btn btn-sm btn-default" style="color:white">Back</a>
                                </div>
                                <div style="text-align: right;" class="col-md-6">
                                    <input type="submit" value="Submit" class="btn btn-sm btn-default" style="color:white">
                                </div>
                            </div>
                        </div>
                    }
                </div>

            </div>
        </div>
    </div>
</section>



<script src="@Url.Content("~/Content/SecurityGuard/scripts/jquery-1.6.1.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Content/SecurityGuard/scripts/modernizr-1.7.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Content/SecurityGuard/scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Content/SecurityGuard/scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>


<script type="text/javascript">
    $("#Email").focus();
</script>