@model Project.Areas.Setup.Models.DocumentTypeViewModel

@{
    ViewBag.Title = "Document Category";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewBag.IsGreetings = "true";}

@section Crumbs{
    <div class="crumbs">

        <ul class="breadcrumb" id="breadcrumbs">
            <li> <i class="icon-home"></i> <a href="@Url.Action("Index", "Dashboard", new { area="Admin"})">Dashboard</a> </li>
            <li class="current"> <a title="" href="javascript: return void(0)">Document Category</a> </li>
        </ul>
    </div>
}

<div class="row">
    <div class="col-md-12">
        <div class="widget-header">
            @Html.ActionLink("Create New", "NewDocumentCategory", null, new { @class = "btn btn-xs btn-success" })
        </div>
        <br />
        <div class="widget-content">
            <table class="table table-striped table-bordered table-hover table-checkable datatable dataTable">
                <thead>
                    <tr style="font-size: 12px;">
                        <th>S/N</th>
                        <th>Name</th>                        
                        <th>Modified By</th>
                        <th>Modified Date</th>
                        <th>Is Deleted</th>
                        

                    </tr>
                </thead>
                <tbody>
                    @if (Model.DocumentCategoryList.Count != 0)
                    {
                        int i = 0;
                        foreach (var item in Model.DocumentCategoryList)
                        {
                            ++i;
                            <tr style="font-size: 12px;">
                                <td>
                                    @i
                                </td>
                                <td>@Html.ActionLink(item.Name, "EditDocumentCategory", new { Id = item.Id }, null)</td>                               
                                <td>@item.ModifiedBy</td>
                                <td>@item.ModifiedDate</td>
                                <td>
                                   @if (item.IsDeleted == true)
                                   {
                                    <span class="label label-danger">Yes</span>
                                   }
                                   else
                                   {
                                    <span class="label label-success">No</span>
                                   }
                                </td>
                               

                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="8">No Records Found!...</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts{
    @Scripts.Render("~/Content/Backend/plugins/datatables/jquery.dataTables.min.js")
    @Scripts.Render("~/Content/Backend/plugins/datatables/tabletools/TableTools.min.js")
    @Scripts.Render("~/Content/Backend/plugins/datatables/colvis/ColVis.min.js")
    @Scripts.Render("~/Content/Backend/plugins/datatables/DT_bootstrap.js")
    <script>
    "use strict";

    </script>
}

