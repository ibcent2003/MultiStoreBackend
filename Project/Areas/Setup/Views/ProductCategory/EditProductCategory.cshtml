@model Project.Areas.Setup.Models.ProductCategoryModel
@using Project.HtmlHelpers
@{
    ViewBag.Title = "Edit Product Category";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewBag.IsGreetings = "true";
}
@section Crumbs{
    <div class="crumbs">

        <ul class="breadcrumb" id="breadcrumbs">
            <li> <i class="icon-home"></i> <a href="@Url.Action("Index", "Dashboard", new { area="Admin"})">Dashboard</a> </li>
            <li class="current"> <a title="" href="javascript: return void(0)"></a>Edit Product Category </li>
        </ul>
    </div>
}



<div class="row">
    <div class="col-md-12">
        <div class="widget box">
            <div class="widget-header">
                <h4>
                    <i class="icon-reorder"></i>
                    Edit Product Category
                </h4>
            </div>
            <div class="widget-content">
                @using (Html.BeginForm("EditProductCategory", "ProductCategory", FormMethod.Post, new { @enctype = "multipart/form-data", @class = "form-horizontal row-border" }))
                {
                    @Html.AntiForgeryToken()
                    @Html.HiddenFor(x=>x.ProductCategoryform.Id)
                    <div class="form-group">
                        @Html.LabelFor(m => m.ProductCategoryform.Name, new { @class = "col-md-2 control-label" })
                        <div class="col-md-6">
                            @Html.TextBoxFor(m => m.ProductCategoryform.Name, new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.ProductCategoryform.Name)
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(m => m.ProductCategoryform.Icon, new { @class = "col-md-2 control-label" })
                        <div class="col-md-6">
                            @Html.TextBoxFor(m => m.ProductCategoryform.Icon, new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.ProductCategoryform.Icon)
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.Label("Exisiting Logo", new { @class = "col-md-2 control-label" })
                        <div class="col-md-6">
                            <img src="@Url.Action("DocumentsUploadedPath", new { Path = (Model.documentPath) + Model.PhotoValue })" height="60" width="190" />
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(m => m.ProductCategoryform.SampleImage, new { @class = "col-md-2 control-label" })
                        <div class="col-md-3">
                            @Html.TextBoxFor(x => Model.ProductCategoryform.SampleImage, new { type = "file" })
                            @Html.ValidationMessageFor(m => m.ProductCategoryform.SampleImage)
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.Label("Is Deleted?", new { @class = "col-md-2 control-label" })
                        <div class="col-md-6">
                            @Html.CheckBoxFor(m => m.ProductCategoryform.IsDeleted)
                        </div>
                    </div>

                    <div class="form-actions">

                        <a class="btn btn-xs btn-warning" href="@Url.Action("Index", "ProductCategory", new { area="Setup"})">Back</a>
                        <input type="submit" class="btn btn-xs btn-success pull-right" value="Save" />
                    </div>
                }
            </div>
        </div>
    </div>
</div>
