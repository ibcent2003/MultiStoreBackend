@model Project.Areas.Setup.Models.AlertViewModel

@{
    ViewBag.Title = "Alert Management";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewBag.IsGreetings = "true";}

@section Crumbs{
    <div class="crumbs">

        <ul class="breadcrumb" id="breadcrumbs">
            <li> <i class="icon-home"></i> <a href="@Url.Action("Index", "Dashboard", new { area="Admin"})">Dashboard</a> </li>
            <li class="current"> <a title="" href="javascript: return void(0)">Alert Management</a> </li>
        </ul>
    </div>
}

<div class="row">
    <div class="col-md-12">
        <div class="widget-header">
            @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-xs btn-success" })
        </div>
        <br />
        <div class="widget-content">
            <table class="table table-striped table-bordered table-hover table-checkable datatable dataTable">
                <thead>
                    <tr style="font-size: 12px;">
                        <th>S/N</th>
                        <th>Name</th>
                        <th>Workflow</th>
                        <th>Modified By</th>
                        <th>Modified Date</th>
                        <th>Is Deleted</th>
                       
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Rows.Count != 0)
                    {
                        int i = 0;
                        foreach (var item in Model.Rows)
                        {
                            ++i;
                            <tr style="font-size: 12px;">
                                <td>
                                    @i
                                </td>
                                <td>@Html.ActionLink(item.Title, "Edit", new { Id = item.Id }, null)</td>
                                <td>@item.Workflow.Name</td>
                                <td>@item.ModifiedBy</td>
                                <td>@item.ModifiedDate.ToShortDateString()</td>
                                <td>
                                      @if (item.IsDeleted == true)
                                        {
                                            <span class="label label-success"> <strong>Yes</strong></span>
                                        }
                                        else
                                        {
                                            <span class="label label-danger"> <strong>No</strong></span>
                                        }

                                </td>
                                
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="8">No Records Found!...</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts{
    @Scripts.Render("~/Content/Backend/plugins/datatables/jquery.dataTables.min.js")
    @Scripts.Render("~/Content/Backend/plugins/datatables/tabletools/TableTools.min.js")
    @Scripts.Render("~/Content/Backend/plugins/datatables/colvis/ColVis.min.js")
    @Scripts.Render("~/Content/Backend/plugins/datatables/DT_bootstrap.js")
    <script>
    "use strict";

    </script>
}

