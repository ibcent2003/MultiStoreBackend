@model Project.Areas.Setup.Models.StoreManagementViewModel
@{
    ViewBag.Title = "Add Payment Method";//+ Model.productcategory.Name + "";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewBag.IsGreetings = "true";
}
@section Crumbs{
    <div class="crumbs">

        <ul class="breadcrumb" id="breadcrumbs">
            <li> <i class="icon-home"></i> <a href="@Url.Action("Index", "Dashboard", new { area="Admin"})">Dashboard</a> </li>
            <li class="current"> <a title="" href="javascript: return void(0)">Store Payment Method</a> </li>

        </ul>
    </div>
}

<div class="container">
    <div class="row">

        <div class="col-md-3" style="text-align: left">
            @*@Html.ActionLink("StoreDashboard", "Dashboard", new { @area = "Admin", Id = Model.store.ProcessInstaceId }, new { @class = "btn btn-xs btn-info" })*@

            <a class = "btn btn-xs btn-info" href="@Url.Action("StoreDashboard", "Dashboard", new {Id=Model.store.ProcessInstaceId, area="Admin"})">Back</a>

        </div>
        <div class="col-md-9"></div>
    </div>
</div>
<br />

@using (Html.BeginForm("StorePaymentMethod", "Store", null, FormMethod.Post, new { @enctype = "multipart/form-data", area = "Admin" }))
{
    <div class="row">
        <div class="col-md-12">
            <div class="widget box">
                <div class="widget-header">
                    <h4><i class="icon-reorder"></i>Store payment Method</h4>
                </div>
                <div class="widget-content">

                    <form class="form-vertical" action="#">
                        <div class="form-group">
                            <div class="row">
                                <div class="col-md-7">
                                    @Html.DropDownListFor(m => Model.PaymentMethodId, new SelectList(Model.PaymentMethodlist, "Value", "Text"), "Please Select a payment method", new { @class = "form-control" })
                                </div>
                                <div class="col-md-5">
                                    @Html.HiddenFor(m => Model.PaymentMethodId)
                                    @Html.HiddenFor(x=>x.store.ProcessInstaceId)
                                    <input type="submit" value="Add Payment" class="btn btn-xs btn-success" />

                                </div>
                            </div>
                        </div>
                    </form>



                </div>
            </div>
        </div>
    </div>
}


<div class="row">
    <div class="col-md-12">
        <div class="widget">
            <div class="widget-header">
                <h4><i class="icon-reorder"></i>Available payment Method </h4>
                <div class="toolbar no-padding">
                    <div class="btn-group"><span class="btn btn-xs widget-collapse"><i class="icon-angle-down"></i></span><span class="btn btn-xs widget-refresh"><i class="icon-refresh"></i></span></div>
                </div>
            </div>

            <div class="widget-content">
                <table class="table table-striped table-bordered table-hover table-checkable datatable dataTable">
                    <thead>
                        <tr>

                            <th>SN</th>
                            <th>
                                Payment Methof Name
                            </th>

                            <th style="text-align:right">
                                Action
                            </th>
                        </tr>
                    </thead>
                    <tbody>

                        @if (Model.StorePaymentMethod.Count != 0)
                        {

                            int i = 0;
                            foreach (var item in Model.StorePaymentMethod)
                            {
                                ++i;
                                <tr>
                                    <td>
                                        @i
                                    </td>
                                    <td>
                                        @item.Name
                                    </td>
                                    <td style="text-align:right">
                                        @Html.ActionLink("Remove", "RemoveStorePaymentMethod", new { Id = Model.store.ProcessInstaceId, PaymentId = item.Id }, new { @class = "btn btn-xs btn-danger", onclick = " return DeleteConfirm()" })

                                    </td>

                                </tr>

                            }


                        }




                    </tbody>
                </table>
            </div>

        </div>
    </div>

</div>


<script>
    function DeleteConfirm() {
        if (confirm("Are you sure want to remove this Payment Method?"))
            return true;
        else
            return false;
    }

</script>

