@model Project.Areas.Setup.Models.StoreManagementViewModel
@using Project.HtmlHelpers
@{
    ViewBag.Title = "Store List";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewBag.IsGreetings = "true";
}
@section Crumbs{
    <div class="crumbs">

        <ul class="breadcrumb" id="breadcrumbs">
            <li> <i class="icon-home"></i> <a href="@Url.Action("Index", "Dashboard", new { area="Admin"})">Dashboard</a> </li>    
            <li class="current"> <a title="" href="javascript: return void(0)"></a>Store List </li>
        </ul>
    </div>
}

<link href="~/Content/Backend/DataTable/css/jquery.dataTables.min.css" rel="stylesheet" />
<link href="~/Content/Backend/DataTable/css/buttons.dataTables.min.css" rel="stylesheet" />
<div class="row">
    <div class="col-md-12">
        <div class="widget-header">
            <h4></h4>
        </div>
        <div class="widget-content">
            <div class="row" style="margin-bottom: 10px;">
                    <div class="col-md-12">
                     @Html.ActionLink("<< Back", "Index",null, new { @class = "btn btn-xs btn-warning" })   @Html.ActionLink("New Store", "NewStore", null, new { @class = "btn btn-xs btn-success" })
                    </div>
                
            </div>
   
           <table class="table table-striped table-bordered table-hover" id="coverNone">
                <thead>
                    <tr>
                        <th>S/N
                        </th>
                         <th>Name
                        </th>
                        <th>Logo
                        </th>
                         <th>Modified By
                        </th>
                        <th>Modified Date
                        </th>
                        <th>Is Deleted
                        </th>
                          
                                           
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                  @if (Model.storelist.Count != 0)
                    {
                        
                        int i = 0;
                        foreach (var item in Model.storelist)
                        {
                            ++i;                                                        
                        <tr>
                            <td>
                                @i
                               
                            </td>
                            <td>
                                @item.Name                               
                            </td>
                             <td>
                                @item.Logo
                               @*  <img src="@Url.Action("DocumentsUploadedPath", new { Path = (Model.newDocumentPath) + item.Logo })" height="100" width="200" />*@
                            </td>
                                                        
                            <td>
                                @item.ModifiedBy                               
                            </td>
                            <td>
                                @item.ModifiedDate                               
                            </td>
                           
                           
                              <td>
                                  @if(item.IsDeleted==true)
                                  {
                                      <span class="label label-info">Yes</span>
                                  }
                                  else
                                  {
                                       <span class="label label-warning">No</span>
                                  }
                                
                            </td>

                            <td>

                                   <div class="dropdown">
                                    <span class="btn dropdown-toggle btn-success" type="button" id="dropdownMenu1" data-toggle="dropdown">Action List <i class="icon-angle-down"></i></span>
                                    <ul class="dropdown-menu  pull-right" role="menu" aria-labelledby="dropdownMenu1">
                                        @*<li role="presentation">@Html.ActionLink("Edit Member", "EditMember", new { Id =item.Id , OrgId=item.OrganisationId }, new { role = "menuitem", tabindex = "-1" })</li>                                                                                                                                                   
                                        <li role="presentation">@Html.ActionLink("View Information", "CompanyInformation", new { Id = Model.MemberId, OrgId=item.OrganisationId , TIN=item.TIN }, new { role = "menuitem", tabindex = "-1" })</li>                                        
                                        @if (Roles.GetRolesForUser(User.Identity.Name).Contains("ADMINISTRATOR") || Roles.GetRolesForUser(User.Identity.Name).Contains("CHA ADMIN"))
                                            {
                                         <li role="presentation">@Html.ActionLink("Delete Information", "DeleteMember", new { MemberId = item.Id, Id=item.OrganisationId}, new { role = "menuitem", tabindex = "-1", onclick = "return DeleteConfirm()" })</li>                                        
                                            }*@

                                    </ul>
                                </div> 
                            </td>
                        </tr>
    
                        }

                    }
                    else
                    {
                        <tr>
                            <td colspan="99">No Records Found!...</td>
                        </tr>
                    }
                </tbody>
            </table>
     
        </div>
    </div>
</div>

<script src="~/Content/Backend/DataTable/js/jquery.dataTables.min.js"></script>
<script src="~/Content/Backend/DataTable/js/dataTables.buttons.min.js"></script>
<script src="~/Content/Backend/DataTable/js/buttons.flash.min.js"></script>
<script src="~/Content/Backend/DataTable/js/buttons.html5.min.js"></script>
<script src="~/Content/Backend/DataTable/js/buttons.print.min.js"></script>

<script type="text/javascript">

    $(document).ready(function () {

        $('#coverNone').DataTable({
            dom: 'Bfrtip',
            buttons: [
                'copy', 'excel', 'pdf'
            ]
        });

    });

    function DeleteConfirm() {
        if (confirm("Are you sure want to remove this member?"))
            return true;
        else
            return false;
    }


    </script>