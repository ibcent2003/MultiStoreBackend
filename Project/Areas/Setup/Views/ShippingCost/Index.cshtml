@model Project.Areas.Setup.Models.ShippingCostViewModel
@using Project.HtmlHelpers
@{
    ViewBag.Title = "Shipping Cost List";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewBag.IsGreetings = "true";
}
@section Crumbs{
    <div class="crumbs">

        <ul class="breadcrumb" id="breadcrumbs">
            <li> <i class="icon-home"></i> <a href="@Url.Action("Index", "Dashboard", new { area="Admin"})">Dashboard</a> </li>
            <li class="current"> <a title="" href="javascript: return void(0)"></a>Shipping Cost List </li>
        </ul>
    </div>
}


<div class="row">
    <div class="col-md-12">
        <div class="widget-header">
            <h4></h4>
        </div>
        <div class="widget-content">
            <div class="row" style="margin-bottom: 10px;">
                <div class="col-md-12">
                    <a class="btn btn-xs btn-warning" href="@Url.Action("Index", "Dashboard", new { area="Admin"})">Dashboard</a>   @Html.ActionLink("Create New", "NewShippingCost", null, new { @class = "btn btn-xs btn-success" })
                </div>

            </div>
            <table class="table table-striped table-bordered table-hover table-checkable datatable dataTable">
                <thead>
                    <tr>
                        <th>
                            S/N
                        </th>
                        <th>
                            Name
                        </th>
                        <th>
                            Price per kg
                        </th>
                        <th>
                            Modified By
                        </th>
                        <th>
                            Modified Date
                        </th>
                        <th>
                            Is Deleted
                        </th>


                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Rows.Count != 0)
                    {

                        int i = 0;
                        foreach (var item in Model.Rows)
                        {
                            ++i;
                    <tr>
                        <td>
                            @i

                        </td>
                        <td>
                            @item.Name
                        </td>
                        <td>
                            ₦@String.Format("{0:n0}", item.Fees)
                        </td>
                        <td>
                            @item.ModifiedBy
                        </td>
                        <td>
                            @item.ModifiedDate
                        </td>


                        <td>
                            @if (item.IsDeleted == true)
                            {
                                <span class="label label-info">Yes</span>
                            }
                            else
                            {
                                <span class="label label-warning">No</span>
                            }

                        </td>

                        <td>
                            <a class="btn btn-xs btn-danger" href="@Url.Action("EditShippingCost", "ShippingCost", new { area="Setup", Id = item.Id})">Edit</a>
                        </td>
                    </tr>

                        }

                    }
                    else
                    {
                        <tr>
                            <td colspan="99">No Records Found!...</td>
                        </tr>
                    }
                </tbody>
            </table>

        </div>
    </div>
</div>


@section Scripts{
    @Scripts.Render("~/Content/Backend/plugins/datatables/jquery.dataTables.min.js")
    @Scripts.Render("~/Content/Backend/plugins/datatables/tabletools/TableTools.min.js")
    @Scripts.Render("~/Content/Backend/plugins/datatables/colvis/ColVis.min.js")
    @Scripts.Render("~/Content/Backend/plugins/datatables/DT_bootstrap.js")
    <script>
        "use strict";

    </script>
}
