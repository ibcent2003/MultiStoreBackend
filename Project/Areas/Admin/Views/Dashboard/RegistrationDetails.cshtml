@model Project.Areas.Admin.Models.DashboardViewModel
@using Project.HtmlHelpers
@{
    ViewBag.Title = "Store Registration Detail";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewBag.IsGreetings = "true";
}
@section Crumbs{
    <div class="crumbs">

        <ul class="breadcrumb" id="breadcrumbs">
            <li> <i class="icon-home"></i> <a href="@Url.Action("Index", "Dashboard", new { area="Admin"})">Dashboard</a> </li>
            <li class="current"> <a title="" href="javascript: return void(0)"></a>Store Registration Detail </li>
        </ul>
    </div>
}

@Html.HiddenFor(x=>x.store.ProcessInstaceId)
<div id="container">
    <div class="row">
        <div class="col-md-12">
            <div class="tabbable tabbable-custom tabbable-full-width">
                <ul class="nav nav-tabs">
                    <li class="active"><a href="#tab_application" data-toggle="tab"><span class="icon-file">App. Details</span></a></li>
  
                    <li><a href="#tab_edit_log" data-toggle="tab"><span class="icon-comments">Logs</span></a></li>                  
                    <li><a href="#tab_edit_approval" data-toggle="tab"><span class="icon-exchange">Approval</span></a></li>
                </ul>
                <div class="tab-content row">
                    <div class="tab-pane active" id="tab_application">
                        <div class="widget box">
                            <div class="widget-header">
                                <h4><i class="icon-reorder"></i>Application Details</h4>
                            </div>
                            <table class="table table-striped table-bordered table-hover table-checkable table-condensed">
                                <thead>
                                    <tr>
                                        <th>
                                            S/N
                                        </th>
                                        <th>
                                            Name
                                        </th>
                                        <th>
                                            Logo
                                        </th>
                                        <th>
                                            Modified By
                                        </th>

                                        <th>
                                            Modified Date
                                        </th>
                                        <th>
                                            Currency
                                        </th>
                                        <th>
                                            Theme
                                        </th>
                                        <th>
                                            Ownedby
                                        </th>
                                        <th>
                                            Status
                                        </th>
                                    </tr>
                                </thead>
                                <tbody>

                                    <tr>
                                        <td>
                                            1

                                        </td>
                                        <td>
                                            @Model.store.Name
                                        </td>
                                        <td>
                                            <img src="@Url.Action("DocumentsUploadedPath", new { Path = (Model.documentPath) + Model.store.Logo })" style="height:80px;width:190px" />
                                        </td>

                                        <td>
                                            @Model.store.ModifiedBy
                                        </td>
                                        <td>
                                            @Model.store.ModifiedDate
                                        </td>


                                        <td>
                                            <span class="label label-info">@Model.store.Country.CurrencyName</span>

                                        </td>
                                        <td>
                                            @Model.store.Themes.Name
                                        </td>
                                        <td>
                                            @Model.store.OwnedBy
                                        </td>
                                        <td>
                                            <span class="label label-danger">@Model.store.Status</span>

                                        </td>
                                    </tr>



                                </tbody>
                            </table>
                        </div>

                        <div class="widget box">
                            <div class="widget-header">
                                <h4><i class="icon-reorder"></i>Bank Information</h4>
                            </div>

                            <div class="widget-content">
                                <table class="table table-striped table-bordered table-hover table-checkable table-condensed">
                                    <thead>
                                        <tr>
                                            <th>
                                                S/N
                                            </th>
                                            <th>
                                                Bank Name
                                            </th>
                                            <th>
                                                Account Name
                                            </th>
                                            <th>
                                                Account Number
                                            </th>


                                        </tr>
                                    </thead>
                                    <tbody>

                                        <tr>
                                            <td>
                                                1

                                            </td>
                                            <td>
                                                @Model.store.Bank.Name
                                            </td>
                                            <td>
                                                @Model.store.AccountName
                                            </td>
                                            <td>
                                                @Model.store.AccountNumber
                                            </td>

                                        </tr>



                                    </tbody>
                                </table>

                            </div>
                        </div>
                        <div class="widget box">
                            <div class="widget-header">
                                <h4><i class="icon-reorder"></i>Preferable Domain Name</h4>
                            </div>

                            <div class="widget-content">
                                <table class="table table-striped table-bordered table-hover table-checkable table-condensed">
                                    <thead>
                                        <tr>

                                            <th>
                                                First Choice
                                            </th>
                                            <th>
                                                Second Choice
                                            </th>
                                            <th>
                                                Third Choice
                                            </th>


                                        </tr>
                                    </thead>
                                    <tbody>

                                        <tr>

                                            <td>
                                                @Model.store.URL
                                            </td>
                                            <td>
                                                @Model.store.URL2
                                            </td>
                                            <td>
                                                @Model.store.URL3
                                            </td>

                                        </tr>



                                    </tbody>
                                </table>

                            </div>
                        </div>
                        <div class="widget box">
                            <div class="widget-header">
                                <h4><i class="icon-reorder"></i>Logistics Information</h4>
                            </div>

                            <div class="widget-content">
                                <table class="table table-striped table-bordered table-hover table-checkable table-condensed">
                                    <thead>
                                        <tr>

                                            <th>
                                                Your Option
                                            </th>



                                        </tr>
                                    </thead>
                                    <tbody>

                                        <tr>

                                            <td>
                                                @if (Model.store.OwnProcurement == true)
                                                {
                                                    <span>Handle logistics by Rocktea </span>

                                                }
                                                else
                                                {
                                                    <span>Handle logistics by @Model.store.Name </span>

                                                }
                                            </td>


                                        </tr>



                                    </tbody>
                                </table>

                            </div>

                            </div>
                            <div class="widget box">
                                <div class="widget-header">
                                    <h4><i class="icon-reorder"></i>Store Address</h4>
                                </div>
                                <table class="table table-striped table-bordered table-hover table-checkable table-condensed">
                                    <thead>
                                        <tr style="font-size: 12px;">
                                            <th>S/N</th>
                                            <th>Address Type</th>
                                            <th>Street</th>
                                            @if (Model.store.CountryId == 1)
                                            {
                                                <th>State</th>
                                                <th>Lga</th>
                                            }
                                            else
                                            {
                                                <th>Region</th>
                                                <th>District</th>
                                            }

                                            <th>Modified By</th>
                                            <th>Modified Date</th>

                                        </tr>
                                    </thead>
                                    <tbody>
                                        @if (Model.addressList.Count != 0)
                                        {
                                            int i = 0;
                                            foreach (var item in Model.addressList)
                                            {
                                                ++i;
                                                <tr style="font-size: 12px;">
                                                    <td>
                                                        @i
                                                    </td>
                                                    <td>@item.AddressType.Name</td>
                                                    <td>@item.Street</td>
                                                    <td>@item.LGA.State.Name</td>
                                                    <td>@item.LGA.Name</td>

                                                    <td>@item.ModifiedBy</td>
                                                    <td>@item.ModifiedDate</td>

                                                </tr>
                                            }
                                        }
                                        else
                                        {
                                            <tr>
                                                <td colspan="8">No Records Found!...</td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>

                            <div class="widget box">
                                <div class="widget-header">
                                    <h4><i class="icon-reorder"></i>Store Contact Person</h4>
                                </div>
                                <table class="table table-striped table-bordered table-hover table-checkable table-condensed">
                                    <thead>
                                        <tr style="font-size: 12px;">
                                            <th>S/N</th>
                                            <th>First Last</th>
                                            <th>Last Name</th>
                                            <th>Email</th>
                                            <th>Number No</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @if (Model.contactInfoList.Count != 0)
                                        {
                                            int i = 0;
                                            foreach (var item in Model.contactInfoList)
                                            {
                                                ++i;
                                                <tr style="font-size: 12px;">
                                                    <td>
                                                        @i
                                                    </td>
                                                    <td>@item.FirstName</td>
                                                    <td>@item.LastName</td>
                                                    <td>@item.EmailAddress</td>
                                                    <td>@item.MobileNo</td>
                                                </tr>
                                            }
                                        }
                                        else
                                        {
                                            <tr>
                                                <td colspan="8">No Records Found!...</td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>

                            <div class="widget box">
                                <div class="widget-header">
                                    <h4><i class="icon-reorder"></i>Product Category</h4>
                                </div>
                                <div class="widget-content">
                                    <div class="panel-group" id="accordion" role="tablist" aria-multiselectable="true">
                                        @foreach (var item in Model.StoreProductCategory)
                                        {
                                            <div class="panel panel-default">
                                                <div class="panel-heading" role="tab" id="headingOne">
                                                    <h6 class="panel-title" style="color:blue">
                                                        <a class="collapsed" data-toggle="collapse" data-parent="#accordion" href="#@item.Id" aria-expanded="false" aria-controls="collapseOne">
                                                            @item.Name

                                                        </a>
                                                    </h6>
                                                </div>
                                                <div id="@item.Id" class="panel-collapse collapse in" role="tabpanel" aria-labelledby="headingOne">
                                                    <div class="panel-body">

                                                        @{
                                                            var GetSubCategory = Model.store.ProductSubCategory.Where(x => x.ProductCategoryId == item.Id).ToList();
                                                        }
                                                        <table class="table table-striped table-bordered table-hover table-checkable table-condensed">
                                                            <thead>
                                                                <tr>

                                                                    <th>SN</th>
                                                                    <th>
                                                                        Added Sub Category
                                                                    </th>


                                                                </tr>
                                                            </thead>
                                                            <tbody>

                                                                @if (GetSubCategory.Count != 0)
                                                                {

                                                                    int i = 0;
                                                                    foreach (var itemsub in GetSubCategory)
                                                                    {
                                                                        ++i;
                                                                        <tr>
                                                                            <td>
                                                                                @i
                                                                            </td>
                                                                            <td>
                                                                                @itemsub.Name
                                                                            </td>


                                                                        </tr>

                                                                    }


                                                                }

                                                            </tbody>
                                                        </table>

                                                    </div>
                                                </div>


                                            </div>
                                        }

                                    </div>

                                </div>
                            </div>

                        </div>

                        <div class="tab-pane" id="tab_edit_log">
                            <div class="widget box">
                                <div class="widget-header">
                                    <h4><i class="icon-reorder"></i>Action Log</h4>
                                </div>
                                @if (Model.ActionLogs.Any())
                                {
                                    <table class="table table-striped table-bordered table-hover table-checkable table-condensed">
                                        <thead>
                                            <tr>
                                                <td nowrap>Officer Name</td>
                                                <td>Action</td>
                                                <td>level</td>
                                                <td>Reason</td>
                                                <td>Date</td>

                                                <td></td>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var item in Model.ActionLogs.OrderByDescending(x => x.Id))
                                            {
                                                <tr>
                                                    <td nowrap>@item.ModifiedBy</td>
                                                    <td nowrap>@item.Name</td>
                                                    <td nowrap>@item.Store.Status</td>
                                                    <td>@item.Reason</td>
                                                    <td nowrap>@item.ModifiedDate</td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                }
                                else
                                {
                                    <text><p>No Action Log Found!</p></text>
                                }

                            </div>
                        </div>




                        <div class="tab-pane" id="tab_edit_approval">



                            <div class="row">

                                @using (Html.BeginForm("RegistrationDetails", "Dashboard", FormMethod.Post, new { @enctype = "multipart/form-data", @class = "form-horizontal", @area = "Admin" }))
                                {
                                    @Html.ValidationSummary(false)
                                    @Html.HiddenFor(x => x.store.ProcessInstaceId)
                                    <div class="col-md-6">
                                        <div class="widget box">
                                            <div class="widget-header">
                                                <h4><i class="icon-reorder"></i>Approval</h4>
                                            </div>
                                            <div class="widget-content align-center">

                                                <div class="form-group">
                                                    <label class="col-md-4 control-label required">Select Action:</label>
                                                    <div class="col-md-8">
                                                        @Html.DropDownListFor(x => x.approvalForm.ActionId, new SelectList(Model.WorkflowStepActions, "Value", "Text"), "Select Action", new { @class = "form-control" })
                                                        @Html.HiddenFor(x => x.approvalForm.Id)
                                                        <span class="system negative" id="Comment-ActionId">@Html.ValidationMessageFor(x => x.approvalForm.ActionId)</span>
                                                        @Html.DropDownListFor(x => x.approvalForm.NextStep, new SelectList(Model.OtherWorkflowSteps, "Value", "Text"), "Select", new { @class = "hidden" })
                                                    </div>
                                                </div>

                                                <div class="form-group">
                                                    <label class="col-md-4 control-label required">Comments:</label>
                                                    <div class="col-md-8">
                                                        @Html.TextAreaFor(x => x.approvalForm.Reason, new { @class = "form-control" })
                                                        <span class="system negative" id="Comment-Reason">@Html.ValidationMessageFor(x => x.approvalForm.Reason)</span>
                                                    </div>
                                                </div>

                                                <div class="form-group">
                                                    <label class="col-md-4 control-label"></label>
                                                    <div class="col-md-8">
                                                        <input type="submit" value="Submit" class="btn btn-primary pull-right" id="wf-action-btn" />

                                                    </div>
                                                </div>

                                            </div>
                                        </div>
                                    </div>
                                }
                                <div class="col-md-6">
                                    <div class="widget box">
                                        <div class="widget-header">
                                            <h4><i class="icon-reorder"></i>Action Log List</h4>
                                        </div>
                                        <div class="widget-content align-left">
                                            @if (Model.ActionLogs.Any())
                                            {
                                                <table class="table table-striped table-bordered table-hover table-checkable table-condensed">
                                                    <thead>
                                                        <tr>
                                                            <td nowrap>Officer Name</td>
                                                            <td>Action</td>
                                                            <td>level</td>
                                                            <td>Reason</td>
                                                            <td>Date</td>

                                                            <td></td>
                                                        </tr>
                                                    </thead>
                                                    <tbody>
                                                        @foreach (var item in Model.ActionLogs.OrderByDescending(x => x.Id))
                                                        {
                                                            <tr>
                                                                <td nowrap>@item.ModifiedBy</td>
                                                                <td nowrap>@item.Name</td>
                                                                <td nowrap>@item.Store.Status</td>
                                                                <td>@item.Reason</td>
                                                                <td nowrap>@item.ModifiedDate</td>
                                                            </tr>
                                                        }
                                                    </tbody>
                                                </table>

                                            }
                                            else
                                            {
                                                <text><p>No Action Log Found!</p></text>
                                            }

                                        </div>
                                    </div>
                                </div>
                            </div>

                        </div>
                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>